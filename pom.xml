<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	
	<modelVersion>4.0.0</modelVersion>
	<groupId>net.nan21.dnet</groupId>
	<artifactId>nan21.dnet.core</artifactId>
	<version>1.0.0.M1</version>
	<name>DNet Core</name>	
	<description>DNet Core</description>
	<packaging>pom</packaging>	
	
	<properties>		 
		<dnet.repository.url>ftp://nan21.net//public_html/dnet/maven2repo</dnet.repository.url>
		<dnet.snapshotrepository.url>ftp://nan21.net//public_html/dnet/maven2repo_snapshots</dnet.snapshotrepository.url>
	</properties>
	
	<!-- ========================== Modules ========================== -->
	
	<modules>
		<module>nan21.dnet.core.parent</module>
		<module>nan21.dnet.core.db</module>
		<module>nan21.dnet.core.domain</module>
		<module>nan21.dnet.core.api</module>
		<module>nan21.dnet.core.presenter</module>
		<module>nan21.dnet.core.ui.extjs</module>
		<module>nan21.dnet.core.web</module>
		<module>nan21.dnet.core.welcome</module>
		<module>nan21.dnet.core.security</module>
	</modules>	
	
	<distributionManagement>
		<repository>
			<uniqueVersion>false</uniqueVersion>
			<id>nan21.net</id>
			<url>${dnet.repository.url}</url>
		</repository>
		<snapshotRepository>
			<uniqueVersion>false</uniqueVersion>
			<id>nan21.net</id>
			<url>${dnet.repository.url}</url>
		</snapshotRepository>		 
	</distributionManagement>
	
</project>	 
